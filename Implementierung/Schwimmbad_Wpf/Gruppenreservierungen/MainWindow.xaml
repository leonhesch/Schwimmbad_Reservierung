<Window x:Class="ReservierungsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservierungssystem für Gruppen" Height="450" Width="800">
    <Grid>
        <!-- TabControl für die verschiedenen Funktionen -->
        <TabControl>
            <!-- Tab 1: Neue Reservierung -->
            <TabItem Header="Neue Reservierung">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name der Gruppe:" Margin="5"/>
                    <TextBox x:Name="txtGroupName" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Gruppengröße:" Margin="5"/>
                    <TextBox x:Name="txtGroupSize" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Reservierungsdatum:" Margin="5"/>
                    <!-- DatePicker statt einem einfachen Textfeld -->
                    <DatePicker x:Name="dpReservationDate" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Besondere Anforderungen:" Margin="5"/>
                    <TextBox x:Name="txtRequirements" Grid.Row="3" Grid.Column="1" Margin="5" Height="80" AcceptsReturn="True"/>

                    <Button Grid.Row="4" Grid.Column="1" Content="Reservierung speichern" Margin="5" 
                            HorizontalAlignment="Right" Click="BtnSaveReservation_Click"/>
                </Grid>
            </TabItem>

            <!-- Tab 2: Reservierungen anzeigen -->
            <TabItem Header="Reservierungen anzeigen">
                <Grid Margin="10">
                    <DataGrid x:Name="dgReservations" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Gruppe" Binding="{Binding GroupName}" Width="*"/>
                            <DataGridTextColumn Header="Größe" Binding="{Binding GroupSize}" Width="Auto"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding Date}" Width="Auto"/>
                            <DataGridTextColumn Header="Anforderungen" Binding="{Binding Requirements}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Aktualisieren" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                            Margin="5" Width="100" Click="BtnRefreshReservations_Click"/>
                </Grid>
            </TabItem>

            <!-- Tab 3: Reservierung suchen -->
            <TabItem Header="Reservierung suchen">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBlock Text="Gruppenname:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox x:Name="txtSearchGroupName" Width="200" Margin="5"/>
                        <Button Content="Suchen" Margin="5" Click="BtnSearchReservation_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="txtSearchResult" Grid.Row="1" Margin="5" TextWrapping="Wrap"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
